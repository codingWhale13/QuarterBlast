{
  "name": "QuarterBlast",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Value your time",
  "homepage_url": "https://codingwhale.dev",
  "icons": {
    "16": "assets/icons/icon16.jpeg",
    "32": "assets/icons/icon32.jpeg",
    "48": "assets/icons/icon48.jpeg",
    "128": "assets/icons/icon128.jpeg"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "browser_action": {
    "default_title": "QuarterBlast",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}